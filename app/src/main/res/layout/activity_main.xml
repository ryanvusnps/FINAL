<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header với gradient background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient_background"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📚 QUẢN LÝ ĐỀ TÀI"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách sinh viên đăng ký đề tài"
            android:textSize="14sp"
            android:textColor="#E8F4FD"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- Search bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp">

        <EditText
            android:id="@+id/etSearch_mssv_0372"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/search_background"
            android:hint="🔍 Tìm kiếm theo MSSV hoặc tên..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="14sp"
            android:textColorHint="#999999"/>
    </LinearLayout>

    <!-- ListView với styling đẹp -->
    <ListView
        android:id="@+id/listView_mssv_0372"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="#F5F5F5"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:smoothScrollbar="true"/>

</LinearLayout>