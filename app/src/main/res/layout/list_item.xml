<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/list_item_background"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:elevation="2dp">

    <!-- Avatar circle -->
    <TextView
        android:id="@+id/tvAvatar_mssv_0372"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/avatar_circle"
        android:gravity="center"
        android:text="A"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp" />

    <!-- Student info container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- Student name -->
        <TextView
            android:id="@+id/tvName_mssv_0372"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sinh viên"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="4dp" />

        <!-- Student ID -->
        <TextView
            android:id="@+id/tvMSSV_mssv_0372"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MSSV: 21200000"
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:layout_marginBottom="2dp" />

        <!-- Group info -->
        <TextView
            android:id="@+id/tvGroup_mssv_0372"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhóm 1"
            android:textSize="12sp"
            android:textColor="#3498DB"
            android:background="@drawable/group_tag_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"/>

    </LinearLayout>

    <!-- Arrow icon -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_forward"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:contentDescription="Xem chi tiết" />

</LinearLayout>